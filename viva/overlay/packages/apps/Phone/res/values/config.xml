<!-- viva-specific phone app resources. -->
<resources>
    <!-- Determine whether calls to mute the microphone in PhoneUtils
                  are routed through the android.media.AudioManager class (true) or through
         the com.android.internal.telephony.Phone interface (false). -->
    <bool name="send_mic_mute_to_AudioManager">true</bool>
    <!-- This device implements a noise suppression device for in call audio-->
    <bool name="has_in_call_noise_suppression">true</bool>
    <!-- Flag indicating if the tty is enabled -->
    <bool name="tty_enabled">true</bool>

    <!-- for the transparency of the bottom field (by holl 4pda) -->
    <color name="incall_call_banner_background">#80000000</color>
    <color name="incall_call_banner_background_bottom">#00000000</color>
    <dimen name="call_banner_height">70.0dip</dimen>
    <dimen name="call_banner_side_padding">10.0dip</dimen>
    <dimen name="call_banner_top_bottom_padding">10.0dip</dimen>
    <dimen name="call_banner_name_number_right_padding">20.0sp</dimen>

</resources>
